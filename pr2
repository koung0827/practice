public class ReverseEven {
    public static void main(String[] args) {
        int[] nums = {3, 6, 1, 8, 4, 7};

        System.out.print("역순의 짝수들: ");
        for (int i = nums.length - 1; i >= 0; i--) {
            if (nums[i] % 2 == 0) {
                System.out.print(nums[i] + " ");
            }
        }
    }
}
